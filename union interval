struct intervals input()
{
        struct intervals z;
        printf("Enter the number of intervals\n");
        scanf("%d",&z.r);
        for(int i=0;i<z.r;i++)
        {
                printf("Enter the lower and upper bounds of %dth interval\n",i+1);
                scanf("%d%d",&z.intervals[i].lower_bound,&z.intervals[i].upper_bound);
        }
        return z;
}
int main()
{
        struct intervals z;
        z=input();
}

